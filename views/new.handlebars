<div class="container my-5 bg-light p-5" style="border-radius: 50px;">

  <form action="/record" method="POST" onsubmit="doAlert.create_alert();">

    <label for="merchant">
      <h4>Merchant</h4>
    </label>
    <input type="text" class="form-control mb-3" id="merchant" name="merchant" required>

    <label for="name">
      <h4>Item Name</h4>
    </label>
    <input type="text" class="form-control mb-3" id="name" name="name" required>

    <label for="date">
      <h4>Date</h4>
    </label>
    <input type="date" class="form-control mb-3" id="date" name="date" value="2020-01-01" required>

    <label for="category">
      <h4>Category</h4>
    </label>
    <select class="form-control mb-3" id="category" name="category">
      <option value="Housing">Housing</option>
      <option value="Transportation">Transportation</option>
      <option value="Entertainment">Entertainment</option>
      <option value="Food">Food</option>
      <option value="Others">Others</option>
    </select>

    <label for="amount">
      <h4>Amount</h4>
    </label>
    <input type="number" step="1" min="0" class="form-control mb-3" id="amount" name="amount" required>

    <button type="submit" class="btn btn-primary my-3">Create</button>

  </form>

</div>